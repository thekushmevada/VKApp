<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C6D5D1"
    tools:ignore="DuplicateIds,MissingClass">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#88B8CC"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <ListView
        android:id="@+id/listview2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView6"
        android:layout_width="410dp"
        android:layout_height="55dp"
        app:cardBackgroundColor="#6C5681"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80B67D"
            android:orientation="horizontal"
            android:paddingTop="0dp">

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="332dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#C9322CD1"
                android:ems="10"
                android:hint="Enter Here..."
                android:inputType="textPersonName"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/imageView20"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/up_arrow" />

            <ImageView
                android:id="@+id/imageView21"
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                app:srcCompat="@drawable/send" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="360dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/llh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#59BF8A"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/workingt1"
                android:layout_width="152dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#81E457"
                android:text="Working"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/pendingt1"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#50B6E1"
                android:text="Pending"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="25dp"
                app:cardCornerRadius="20dp"/>

            <TextView
                android:id="@+id/donet1"
                android:layout_width="117dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#50B6E1"
                android:text="Done"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="25dp"
                app:cardCornerRadius="20dp"/>

            <TextView
                android:id="@+id/alltaskt1"
                android:layout_width="158dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#50B6E1"
                android:text="All Task"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="25dp"
                app:cardCornerRadius="20dp"/>

            <TextView
                android:id="@+id/givenbymet1"
                android:layout_width="225dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#50B6E1"
                android:text="Given By Me"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="25dp"
                app:cardCornerRadius="20dp"/>
        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>